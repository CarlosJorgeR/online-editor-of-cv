---
import BaseLayout from '../layouts/BaseLayout.astro';
import CVExampleImages from '../components/CVExampleImages.astro';
import Title from '../components/Title.astro';
import BasicButton from '../components/shared/Button/BasicButton.vue';
---

<BaseLayout pageTitle="An online curriculum vitae maker / Cuvimaker">
	<section class="p-2 max-md:p-1">
		<Title>Create your own <br /> curriculum vitae</Title>
		<p class="mb-4 text-lg max-lg:text-center max-sm:text-base">
			Save your personal data, skills, experience, projects <br
				class="max-sm:hidden"
			/> and more. Download the cv in a pdf format.
		</p>
		<aside class="mb-4 hidden justify-center max-lg:flex">
			<div class="w-4/5">
				<CVExampleImages />
			</div>
		</aside>
		<div class="max-lg:text-center">
			<a href="editor">
				<BasicButton
					aria-label="Create curriculum"
					name={'Create curriculum'}
				/>
			</a>
		</div>
	</section>
	<aside class="flex w-5/12 justify-center p-2 max-lg:hidden max-lg:w-2/5">
		<CVExampleImages />
	</aside>
</BaseLayout>
