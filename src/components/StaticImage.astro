---
const { id, imageSrc = '', width = 400, altText } = Astro.props;
---

<picture
	class="mx-auto flex max-w-[380px] overflow-hidden drop-shadow-[-0px_0px_12px_hsl(var(--wac))] dark:drop-shadow-[-11px_11px_25px_hsl(var(--a))]"
	class="block"
	class:list={[`max-w-[${width}px]`]}
>
	<img
		class="m rounded-sm bg-transparent"
		src={imageSrc}
		alt={altText}
		width={width}
	/>
</picture>
