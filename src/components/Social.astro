---
import { Icon } from 'astro-icon';
const { platform, username, icon, extraPath = '' } = Astro.props;
---

<a
    class="w-16 text-[var(--primary-color)] transition-colors duration-500 hover:text-[var(--anchor-color)] dark:text-zinc-400 dark:hover:text-[var(--anchor-color)]"
    href={`https://www.${platform}.com${extraPath}/${username}`}
>
    <Icon name={icon} />
</a>
