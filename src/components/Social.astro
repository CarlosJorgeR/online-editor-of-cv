---
import { Icon } from 'astro-icon'
const { platform, username,icon ,extraPath = "" } = Astro.props;
---

<a class="text-[var(--primary-color)] w-16   hover:text-[var(--anchor-color)]  dark:text-zinc-400 dark:hover:text-[var(--anchor-color)] hover:transition-all hover:duration-500" href={`https://www.${platform}.com${extraPath}/${username}`}
  > <Icon  name={icon} /> </a
>
