---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import '@fontsource/montserrat';
const { pageTitle } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
            name="keywords"
            content="cuvimaker,Astro,CV,Online,Editor,CV Maker,CSS,JavaScript,Github,Repository"
        >
    <link rel="icon" type="image/svg+xml" href="/cuvimaker.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
    <meta name="description" content="An online editor of cv, SEO-friendly made in Astro">
  </head>
  <body class="font-[Montserrat] dark:bg-[#04041a] bg-white dark:text-white">
    <Header />
    <main class="m-8">
      <h1>{pageTitle}</h1>
      <slot />
      <Footer />
    </main>
  </body>
</html>

